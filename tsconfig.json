{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES6"
  },
  "include": ["src", "@types"]
}
