{
  "name": "@localfirst/taco-chat",
  "version": "5.4.2",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Demo app for @localfirst/auth",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "dev:relay": "cross-env NODE_NO_WARNINGS=1 DEBUG='localfirst*' DEBUG_COLORS=1 node ./scripts/start-relay-server.js",
    "dev:serve": "vite --force --port 3000",
    "dev": "run-p dev:relay dev:serve",
    "dev:cy": "cross-env CYPRESS_REMOTE_DEBUGGING_PORT=9222 run-p dev test:cy",
    "preinstall": "npx only-allow pnpm",
    "preview": "run-s build && vite preview",
    "test:cy:parallel": "run-p --race dev test:cy:parallel:exec",
    "test:cy:parallel:exec": "cypress-parallel -s test:cy:run:exec -t 5 -d 'cypress/e2e' -n ../../node_modules/cypress-multi-reporters",
    "test:cy": "cypress open --browser chrome --e2e",
    "test:cy:run": "run-p --race dev test:cy:run:exec",
    "test:cy:run:exec": "cypress run --browser chrome --e2e"
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@ibm/plex": "^6.3.0",
    "@localfirst/auth": "workspace:*",
    "@localfirst/relay": "^4.2.2",
    "@localfirst/shared": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^4.2.0",
    "async-mutex": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "classnames": "^2.3.2",
    "clipboard": "^2.0.11",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "eventemitter3": "^5.0.1",
    "friendly-words": "^1.2.4",
    "isomorphic-ws": "^5.0.0",
    "keycode": "^2.2.1",
    "mermaid": "^10.6.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.3",
    "vite-plugin-top-level-await": "^1.3.1",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "cypress": "^13.6.0",
    "esbuild": "^0.19.9",
    "react-devtools": "^4.28.5"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "9a7b871e9e34268b32cc6e574189ec2350787b81"
}
